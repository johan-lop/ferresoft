<?xml version="1.0" encoding="UTF-8"?>
<persistence version="1.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence     http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd">
  <persistence-unit name="ferremaurosDS" transaction-type="JTA">
    <jta-data-source>java:/ferremaurosDS</jta-data-source>
    <class>com.co.ferreteria.ferresoft.model.maestros.Producto</class>
    <class>com.co.ferreteria.ferresoft.model.maestros.Unidad</class>
    <class>com.co.ferreteria.ferresoft.model.maestros.Marca</class>
    <class>com.co.ferreteria.ferresoft.model.seguridad.Menu</class>
    <class>com.co.ferreteria.ferresoft.model.seguridad.Rol</class>
    <class>com.co.ferreteria.ferresoft.model.maestros.Municipio</class>
    <class>com.co.ferreteria.ferresoft.model.maestros.Departamento</class>
    <class>com.co.ferreteria.ferresoft.model.maestros.Cliente</class>
    <class>com.co.ferreteria.ferresoft.model.maestros.TipoIdentificacion</class>
    <class>com.co.ferreteria.ferresoft.model.transaccional.Venta</class>
    <class>com.co.ferreteria.ferresoft.model.transaccional.DetalleVenta</class>
    <class>com.co.ferreteria.ferresoft.model.maestros.TipoVenta</class>
    <class>com.co.ferreteria.ferresoft.model.maestros.TipoPago</class>
    <properties>
      <property name="hibernate.archive.autodetection" value="class"/>
      <property name="hibernate.format_sql" value="true"/>
      <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQL9Dialect"/>
      <property name="hibernate.connection.driver_class" value="org.postgresql.Driver"/>
      <property name="hibernate.show_sql" value="false"/>
    </properties>
  </persistence-unit>
</persistence>
